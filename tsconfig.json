{
	"compilerOptions": {
		"target": "ES2024",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"outDir": "dist",
		"rootDir": ".",
		"baseUrl": ".",
		"types": ["node"]
	},
	"include": ["src/**/*.ts", "playwright.config.ts"],
	"exclude": ["node_modules", "dist"]
}
