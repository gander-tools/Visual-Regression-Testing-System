{
	"name": "@gander-tools/visual-regression-testing-system",
	"type": "module",
	"devDependencies": {
		"@playwright/test": "^1.58.0",
		"@types/node": "^25.2.0",
		"tsdown": "^0.20.3",
		"tsx": "^4.20.0",
		"typescript": "^5.9.0"
	},
	"engines": {
		"node": ">=24"
	},
	"license": "GPL-3.0-only",
	"private": true,
	"scripts": {
		"cli": "tsx src/cli.ts",
		"build": "bash scripts/build.sh",
		"build:bundle": "tsdown",
		"test:build": "tsx --test src/build.test.ts",
		"typecheck": "tsc --noEmit",
		"check": "npx -y @biomejs/biome check",
		"test:unit": "tsx --test src/cli.test.ts src/run-visual-tests.test.ts",
		"check:fix": "npx -y @biomejs/biome check --write"
	},
	"dependencies": {
		"commander": "^14.0.3"
	}
}
